<!DOCTYPE html>
<html>
  <head>
    <%# Replace with your application name %>
    <title>Starter App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

  <body>
    <p>
      <% @user = User.find_by({ "id" => session["user_id"] }) %>
      <% if @user == nil %>
        <a href="/users/new">Sign Up</a> | <a href="/login">Login</a>
      <% else %>
        <%= @user["first_name"] %> | <a href="/logout">Logout</a>
      <% end %>
    </p>

    <p>
      <%= flash["notice"] %>
    </p>

    <%= yield %>
    <!-- app/views/my_cats.html.erb -->

<div class="container">
  <h1 class="text-center">My Cats</h1>

  <div id="carouselExample" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% Dir.glob("app/assets/images/cats/*").each_with_index do |image_path, index| %>
        <div class="carousel-item <%= index.zero? ? 'active' : '' %>">
          <%= image_tag image_path, class: 'd-block w-100' %>
        </div>
      <% end %>
    </div>

    <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

  </body>
</html>
